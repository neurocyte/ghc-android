BIN_GHC=$(ls $NDK/bin/*-ghc)
BIN_LD=$(ls $NDK/bin/*-ld)
PKGDB=$(echo $NDK/lib/ghc-*)/package.conf.d
export HOME=$NDK

mkdir -p $NDK/cabal
[ -e "$NDK/.cabal" ] || ln -s $NDK/cabal $NDK/.cabal

if [ "$1" = "install" ] || [ "$1" = configure ] ; then
    exec /usr/bin/cabal \
        --with-compiler=$BIN_GHC \
        --with-ghc=$BIN_GHC \
        --with-ghc-pkg=$BIN_GHC-pkg \
        --with-ld=$BIN_LD \
        --package-db=$PKGDB \
        "$@"
else
    exec /usr/bin/cabal "$@"
fi
